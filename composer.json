{
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "JR Tashjian",
            "homepage": "https://jrtashjian.com"
        },
        {
            "name": "OmniForm",
            "homepage": "https://omniformwp.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "OmniForm\\": "includes"
        },
        "classmap": [
            "vendor_prefixed/"
        ]
    },
    "require": {
        "illuminate/container": "^8.83"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "johnpbloch/wordpress-core": "^6.1",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "wp-cli/wp-cli-bundle": "^2.6",
        "wp-coding-standards/wpcs": "^2.3",
        "wp-phpunit/wp-phpunit": "^6.1",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "lint": "phpcs --standard=phpcs.xml.dist",
        "format": "phpcbf --standard=phpcs.xml.dist --report-summary --report-source",
        "test": "phpunit",
        "makepot": "wp i18n make-pot . --exclude=\"node_modules,vendor\" --headers='{\"Last-Translator\":\"info@omniformwp.com\",\"Language-Team\":\"info@omniformwp.com\",\"Report-Msgid-Bugs-To\":\"https://omniformwp.com/contact\"}'",
        "build-release": [
            "rm -r ./vendor",
            "@composer dump-autoload",
            "wp dist-archive ./",
            "@composer install"
        ],
        "phpscoper": [
            "rm -rf ./vendor ./vendor_prefixed",
            "@composer install --no-autoloader --no-dev --prefer-dist",
            "php-scoper add-prefix --prefix='OmniForm\\Dependencies' --output-dir=./vendor_prefixed --force",
            "rm -rf ./vendor",
            "@composer dump-autoload --optimize"
        ]
    }
}
