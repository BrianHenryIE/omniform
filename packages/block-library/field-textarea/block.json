{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/wp/6.2/schemas/json/block.json",
	"apiVersion": 2,
	"name": "omniform/field-textarea",
	"category": "omniform-control-simple",
	"title": "Long Text",
	"description": "A text field for long responses.",
	"textdomain": "omniform",
	"attributes": {
		"fieldPlaceholder": {
			"type": "string"
		},
		"fieldLabel": {
			"type": "string"
		},
		"fieldName": {
			"type": "string"
		},
		"fieldValue": {
			"type": "string"
		},
		"height": {
			"type": "integer",
			"default": 230
		},
		"isRequired": {
			"type": "boolean"
		},
		"isLabelHidden": {
			"type": "boolean"
		}
	},
	"supports": {
		"html": false,
		"color": {
			"text": true,
			"background": true
		},
		"__experimentalBorder": true,
		"__experimentalSelector": ".wp-block-omniform-field-textarea .omniform-field-control"
	},
	"usesContext": [
		"postId",
		"postType",
		"omniform/fieldGroupName",
		"omniform/fieldGroupLabel"
	],
	"editorScript": "file:index.js",
	"editorStyle": "file:index.css",
	"style": "file:style-index.css"
}