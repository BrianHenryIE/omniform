{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "omniform/field-textarea",
	"category": "form-control",
	"title": "Textarea",
	"description": "A text box for long responses.",
	"textdomain": "omniform",
	"attributes": {
		"fieldPlaceholder": {
			"type": "string"
		},
		"fieldLabel": {
			"type": "string"
		},
		"fieldName": {
			"type": "string"
		},
		"fieldValue": {
			"type": "string"
		},
		"height": {
			"type": "integer"
		},
		"isRequired": {
			"type": "boolean"
		}
	},
	"supports": {
		"align": true,
		"html": false,
		"color": {
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		}
	},
	"usesContext": [ "omniform/fieldGroupName" ],
	"editorScript": "file:index.js",
	"editorStyle": "file:index.css",
	"style": "file:style-index.css"
}