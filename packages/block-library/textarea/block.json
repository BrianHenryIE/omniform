{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/wp/6.2/schemas/json/block.json",
	"apiVersion": 2,
	"name": "omniform/textarea",
	"category": "omniform-control-simple",
	"title": "Textarea",
	"description": "A Textarea",
	"textdomain": "omniform",
	"parent": [ "omniform/field" ],
	"attributes": {
		"fieldPlaceholder": {
			"type": "string"
		},
		"fieldValue": {
			"type": "string"
		}
	},
	"supports": {
		"html": false,
		"color": {
			"text": true,
			"background": true
		},
		"spacing": {
			"padding": true
		},
		"dimensions": {
			"minHeight": true,
			"__experimentalDefaultControls": {
				"minHeight": true
			}
		},
		"__experimentalBorder": true
	},
	"usesContext": [
		"postId",
		"postType",
		"omniform/fieldGroupName",
		"omniform/fieldGroupLabel",
		"omniform/fieldLabel",
		"omniform/fieldName",
		"omniform/isRequired"
	],
	"styles": [
		{ "name": "inverted", "label": "Inverted" }
	],
	"editorScript": "file:index.js",
	"style": "file:style-index.css"
}