{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "omniform/field-input",
	"category": "omniform-control-simple",
	"title": "Short Text",
	"description": "A text field for brief responses.",
	"textdomain": "omniform",
	"attributes": {
		"fieldType": {
			"type": "string",
			"default": "text"
		},
		"fieldPlaceholder": {
			"type": "string"
		},
		"fieldLabel": {
			"type": "string"
		},
		"fieldName": {
			"type": "string"
		},
		"fieldValue": {
			"type": "string"
		},
		"isRequired": {
			"type": "boolean"
		},
		"isLabelHidden": {
			"type": "boolean"
		}
	},
	"supports": {
		"html": false,
		"__experimentalSelector": ".wp-block-omniform-field-input .omniform-field-control"
	},
	"usesContext": [
		"postId",
		"postType",
		"omniform/fieldGroupName",
		"omniform/fieldGroupLabel",
		"omniform/fieldGroupRequired"
	],
	"editorScript": "file:index.js",
	"editorStyle": "file:index.css",
	"style": "file:style-index.css"
}